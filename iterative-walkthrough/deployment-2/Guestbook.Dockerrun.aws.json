{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "guestbook",
            "image": "quintilesims/guestbook-redis",
            "essential": true,
            "memory": 128,
            "environment": [
                {
                    "name": "GUESTBOOK_BACKEND_TYPE",
                    "value": "redis"
                },
                {
                    "name": "GUESTBOOK_BACKEND_CONFIG",
                    "value": "<redis host and port here>"
                }
            ],
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
               }
            ]
        }
    ]
}
